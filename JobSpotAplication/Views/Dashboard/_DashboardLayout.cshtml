<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>Dashboard</title>
    <!-- Adds ProximNova Adobe Font-->
    <link rel="stylesheet" href="https://use.typekit.net/png3jwr.css">
    <!-- Bootstrap and custom CSS-->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/dashboard.css" />
    <!-- Adds icon set kit for use across website-->
    <script src="https://kit.fontawesome.com/11aafdac8b.js" crossorigin="anonymous"></script>
</head>
<body>
    <nav class="navbar top-nav sticky-top flex-md-nowrap p-0">
        <a class="navbr-brandmr-0" asp-area="" asp-controller="Home" asp-action="Index"><img class="logo" src="images/logo.svg" alt="jobSpot logo">JobSpot - Dashboard</a>
    </nav>

    @RenderBody()

    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-2 d-none d-md-block bg-light sidebar">
                <div class="sidebar">
                    <ul class="nav flex-column">
                        <li class="nav-divider"></li>
                        <li>
                            <a class="btn btn-block" href="#"><i class="fab fa-searchengin fa-lg"></i><span>Search</span></a>
                        </li>
                        <li>
                            <a class="btn btn-block" href="#"><i class="far fa-clock fa-lg"></i><span>Scheduling</span></a>
                        </li>
                        <li>
                            <a class="btn btn-block" href="#"><i class="fas fa-bookmark fa-lg"></i><span>Favourites</span></a>
                        </li>
                        <li>
                            <a class="btn btn-block" href="#"><i class="far fa-user-circle fa-lg"></i><span>Manage Account</span></a>
                        </li>
                    </ul>
                    <ul class="nav flex-column mb-2">
                        <li class="nav-divider"></li>
                        <li>
                            <a class="btn btn-block" href="#"><i class="far fa-question-circle fa-lg"></i><span>Help</span></a>
                        </li>
                        <li>
                            <a class="btn btn-block" href="#"><i class="fas fa-sign-out-alt fa-lg"></i><span>Sign Out</span></a>
                        </li>
                    </ul>
                </div>
            </nav>
            <main class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4" role="main">
                <div class="d-flex justify-content-between flex-wrap align-items-center pb-2 mb-3 border-bottom">
                    <!-- Search Form-->
                    <form class="search-form" action="">
                        <h1 class="h1">Search</h1>
                        <p>Enter your keywords and job specifications to begin searching. </p>
                        <hr />
                        <div class="row">
                            <div class="col">
                                <label for="keywords">Keywords</label>
                                <input class="form-control form-control-dark w-100" type="text" placeholder="Keywords" aria-label="Keywords" id="keywords">
                            </div>
                            <div class="col">
                                <label for="classification">Classification</label>
                                <select class="custom-select" id="classification">
                                    <option selected value="any">Any Classification</option>
                                    <option value="accounting">Accounting</option>
                                    <option value="administration-office">Administration & Office Support</option>
                                    <option value="advertising-arts-media">Advertising, Arts &Aacute; Media</option>
                                    <option value="banking-finance">Banking &Aacute; Financial Services</option>
                                    <option value="callcentre-customerservice">Call Centre &Aacute; Customer Service</option>
                                    <option value="ceo-management">CEO &Aacute; General Management</option>
                                    <option value="community-services">Community Services &Aacute; Development</option>
                                    <option value="construction">Construction</option>
                                    <option value="consulting-strategy">Consulting &Aacute; Strategy</option>
                                    <option value="design-architecture">Design &Aacute; Architecture</option>
                                </select>
                            </div>
                            <div class="col">
                                <label for="location">Location</label>
                                <input class="form-control form-control-dark" type="text" placeholder="Location" aria-label="Location" id="location">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <label for="commitment">Commitment</label>
                                <select class="custom-select" id="commitment">
                                    <option selected value="any">Any</option>
                                    <option value="fulltime">Full time</option>
                                    <option value="parttime">Part time</option>
                                    <option value="contract">Contract/Temp</option>
                                    <option value="casual">Casual/Vacation</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label for="wage-start">Wage Start</label>
                                <select class="custom-select" id="wage-start">
                                    <option selected value="0">$0</option>
                                    <option value="30k">$30,000</option>
                                    <option value="40k">$40,000</option>
                                    <option value="50k">$50,000</option>
                                    <option value="60k">$60,000</option>
                                    <option value="70k">$70,000</option>
                                    <option value="80k">$80,000</option>
                                    <option value="100k">$100,000</option>
                                    <option value="120k">$120,000</option>
                                    <option value="150k">$150,000</option>
                                    <option value="200k">$200,000</option>
                                    <option value="200kplus">$200,000+</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label for="wage-end">Wage End</label>
                                <select class="custom-select" id="wage-end">
                                    <option selected value="30k">$30,000</option>
                                    <option value="40k">$40,000</option>
                                    <option value="50k">$50,000</option>
                                    <option value="60k">$60,000</option>
                                    <option value="70k">$70,000</option>
                                    <option value="80k">$80,000</option>
                                    <option value="100k">$100,000</option>
                                    <option value="120k">$120,000</option>
                                    <option value="150k">$150,000</option>
                                    <option value="200k">$200,000</option>
                                    <option value="200kplus">$200,000+</option>
                                </select>
                            </div>
                        </div>
                        <button class="btn btn-primary" type="submit">Search</button>
                    </form>

                    <!-- Search Result Demo -->
                    <div class="card col-12">
                        <div class="row">
                            <div class="col">
                                <h5 class="card-header">Job Result Title</h5>
                            </div>
                            <div class="col-1">
                                <a href="#"><i class="fas fa-bookmark fa-lg text-right"></i></a>
                            </div>
                        </div>

                        <div class="card-body">
                            <h5 class="card-title salary">$50,000 pa</h5>
                            <p class="card-text">Web developers design and build websites. They are typically responsible for the appearance, of the site and technical aspects, such as site speed and how much traffic the site can handle. Web developers may also create site content that requires technical features.</p>
                            <a href="#" class="btn btn-primary text-right">Go somewhere</a>
                        </div>
                    </div>

                    <!-- Loading Spinner Demo -->
                    <div class="lds-ellipsis">
                        <div></div>
                        <div></div>
                        <div></div>
                        <div></div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://code.jquery.com/jquery-1.12.4.min.js" integrity="sha384-nvAa0+6Qg9clwYCGGPpDQLVpLNn0fRaROjHqs13t4Ggj3Ez50XnGQqc/r8MhnRDZ" crossorigin="anonymous"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js" integrity="sha384-aJ21OjlMXNL5UyIl/XNwTMqvzeRMZH2w8c5cRVpzpU8Y5bApTppSuUkhZXN0VxHd" crossorigin="anonymous"></script>
</body>
</html>
